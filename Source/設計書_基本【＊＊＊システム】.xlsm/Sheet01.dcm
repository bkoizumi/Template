Function óÒïùí≤êÆ()
  Dim line As Long, endLine As Long, colLine As Long, endColLine As Long
  Dim columnName As String
  
  On Error GoTo catchError

  endLine = Cells(Rows.count, 1).End(xlUp).Row
  endColLine = Cells(2, Columns.count).End(xlToLeft).Column
  
  Columns("A:B").ColumnWidth = 25
  For colLine = 3 To endColLine
    columnName = Library.getColumnName(colLine)
    If Cells(2, colLine) <> "" Then
      Columns(columnName & ":" & columnName).ColumnWidth = 15
    Else
      Columns(columnName & ":" & columnName).ColumnWidth = 5
    End If
  Next

  Exit Function
'ÉGÉâÅ[î≠ê∂éû=====================================================================================
catchError:
  Call Library.showNotice(Err.Number, Err.Description, True)
End Function

